<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ResourceMonitor.Controllers.AverageUsageController">
   <children>
      <ChoiceBox fx:id="dateDropdown" layoutX="287.0" layoutY="65.0" prefWidth="150.0" />
      <BarChart fx:id="averageUsageChart" layoutX="100.0" layoutY="100.0">
        <xAxis>
          <CategoryAxis fx:id="resourceTypeAxis" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="usageAxis" side="LEFT" />
        </yAxis>
      </BarChart>
      <Button fx:id="changeButton" layoutX="170.0" layoutY="532.0" mnemonicParsing="false" onAction="#switchToTableView" text="Table View" />
      <Button fx:id="realtimeButton" layoutX="450.0" layoutY="532.0" mnemonicParsing="false" onAction="#switchToRealTimeView" text="Realtime Graph" />
      <Text layoutX="160.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Average Resource Values by date!">
         <font>
            <Font size="27.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
